<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundColorStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.suleymanovtat.moneytracker.fragments.AuthFragment"
    tools:ignore="ContentDescription">

    <ImageView
        style="@style/ImageIntroStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_auth"
        style="@style/ButtonGoogleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_about"
        style="@style/TextViewAboutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about" />

    <ImageView
        style="@style/ImageViewLogoStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
