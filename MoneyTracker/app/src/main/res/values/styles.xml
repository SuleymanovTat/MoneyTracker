<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextNameStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorTextAdd</item>
        <item name="android:textColorHint">@color/colorTextAdd</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/name_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginEnd">@dimen/edit_name_margin</item>
        <item name="android:layout_marginStart">@dimen/edit_name_margin</item>
    </style>

    <style name="EditTextAddStyle" parent="EditTextNameStyle">
        <item name="android:hint">@string/price_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/zero</item>
        <item name="android:layout_marginStart">@dimen/zero</item>
    </style>

    <style name="ItemTextSyle">
        <item name="android:padding">@dimen/tv_item_padding</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/name_size</item>
        <item name="android:textColor">@color/colorTextItem</item>
        <item name="android:background">@color/colorName</item>

    </style>

    <style name="ItemTextPriceSyle">
        <item name="android:paddingLeft">@dimen/tv_item_price</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextItem</item>
        <item name="android:textSize">@dimen/price_size</item>
        <item name="android:background">@color/colorPrice</item>
    </style>

    <style name="ItemTextRulbeSyle" parent="ItemTextPriceSyle">
        <item name="android:paddingLeft">@dimen/zero</item>
        <item name="android:paddingRight">@dimen/tv_item_price</item>
        <item name="android:textSize">@dimen/ruble_size</item>
        <item name="android:text">@string/ruble</item>
    </style>

    <style name="ItemStyle">
        <item name="android:layout_marginBottom">@dimen/dividers_size</item>
        <item name="android:layout_marginTop">@dimen/dividers_size</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewRubleNewEnterStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/colorTextAdd</item>
        <item name="android:text">@string/ruble</item>
    </style>

    <style name="TextViewAddStyle">
        <item name="android:enabled">false</item>
        <item name="android:paddingEnd">@dimen/tv_item_padding</item>
        <item name="android:paddingStart">@dimen/tv_item_padding</item>
        <item name="android:textColor">@color/colorTextAdd</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@drawable/bg_pattern</item>
    </style>
    <style name="ItemRelativeStyle" parent="BackgroundStyle">
        <item name="android:padding">@dimen/fragment_padding</item>
    </style>

    <style name="TextViewBalanceStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


</resources>
